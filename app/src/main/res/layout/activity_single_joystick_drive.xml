<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="matt.arduinotester.SingleJoystickDrive"
    android:clipChildren="false">

    <matt.arduinotester.JoystickView
        android:id="@+id/joystick"
        android:layout_width="272dp"
        android:layout_height="277dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:autoRecenterThumbstick="true"
        app:borderColor="@color/colorPrimaryDark"
        app:borderSize="10dp"
        app:joystickColor="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:thumbstickColor="@color/colorAccent"
        app:thumbstickRadius="43dp" />
</android.support.constraint.ConstraintLayout>
